<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MultiMedia.ChapterEleven">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.1"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/useIntent2RecordVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="使用Intent录制"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/useIntent2Play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放录制的视频" />

        <Button
            android:id="@+id/saveRecorderVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存录制的视频" />
    </LinearLayout>

    <VideoView
        android:id="@+id/intentVideView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11.3.2定制视频捕获"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal">

        <SurfaceView
            android:id="@+id/CustomVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <VideoView
            android:id="@+id/recordingVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startRecorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="startRecorder"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stopRecorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="stopRecorder"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/playRecorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="playRecorder"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>